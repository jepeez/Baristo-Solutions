</footer>

<script>
    import emailjs from "@emailjs/browser";

    const form = document.getElementById("contact-form") as HTMLFormElement;
    const statusDiv = document.getElementById("form-status");
    const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;

    if (form) {
        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            
            if (!statusDiv || !submitBtn) return;

            // Reset status
            statusDiv.textContent = "Sending...";
            statusDiv.className = "mt-4 text-center text-sm font-medium text-slate-500";
            submitBtn.disabled = true;

            const serviceId = import.meta.env.PUBLIC_EMAILJS_SERVICE_ID;
            const templateId = import.meta.env.PUBLIC_EMAILJS_TEMPLATE_ID;
            const publicKey = import.meta.env.PUBLIC_EMAILJS_PUBLIC_KEY;

            if (!serviceId || !templateId || !publicKey) {
                statusDiv.textContent = "Error: EmailJS configuration missing.";
                statusDiv.className = "mt-4 text-center text-sm font-medium text-red-500";
                submitBtn.disabled = false;
                console.error("EmailJS environment variables are missing.");
                return;
            }

            try {
                await emailjs.sendForm(serviceId, templateId, form, publicKey);
                
                statusDiv.textContent = "Message sent successfully!";
                statusDiv.className = "mt-4 text-center text-sm font-medium text-green-600";
                form.reset();
            } catch (error) {
                console.error("EmailJS Error:", error);
                statusDiv.textContent = "Failed to send message. Please try again.";
                statusDiv.className = "mt-4 text-center text-sm font-medium text-red-500";
            } finally {
                submitBtn.disabled = false;
            }
        });
    }
</script>
