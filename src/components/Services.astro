---
const services = [
    {
        title: "LSC Consultation & Training",
        description:
            "General LSC training and specialized Hidex TDCR (300 SL, 600 SLe, ULLA) user training.",
        image: `${import.meta.env.BASE_URL}training.webp`,
    },
    {
        title: "Technical Support",
        description:
            "Installation, preventive maintenance, and application support for Hidex systems.",
        image: `${import.meta.env.BASE_URL}tech support.webp`,
    },
    {
        title: "Application Optimization",
        description:
            "Setting up and optimization of measurement protocols and troubleshooting of the data.",
        image: `${import.meta.env.BASE_URL}optimize.webp`,
    },
    {
        title: "Business Development",
        description:
            "Strategic support for global distributor channel development and management.",
        image: `${import.meta.env.BASE_URL}business development.webp`,
        imageClass: "object-top",
    },
];
---

<section id="services" class="py-20 bg-slate-50 relative overflow-hidden">
    <!-- Abstract Background Blob -->
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-blue-100/40 rounded-full blur-3xl -z-10 pointer-events-none"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 fade-in-section">
        <div class="text-center mb-16">
            <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4">
                Our Services
            </h2>
            <p class="text-slate-600 max-w-2xl mx-auto">
                Expert solutions tailored to your laboratory's needs.
            </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            {
                services.map((service) => (
                    <div class="bg-gradient-to-br from-white to-blue-100/60 backdrop-blur-xl rounded-2xl overflow-hidden border border-blue-200/60 shadow-[0_8px_30px_rgb(0,0,0,0.04)] hover:shadow-[0_20px_40px_rgb(0,0,0,0.06)] transition-all duration-300 hover:-translate-y-1 group">
                        <div class="h-64 overflow-hidden relative">
                            <img
                                src={service.image}
                                alt={service.title}
                                class={`w-full h-full object-cover transition-transform duration-500 group-hover:scale-105 ${service.imageClass || "object-center"}`}
                            />
                            <div class="absolute inset-0 bg-blue-900/10 group-hover:bg-transparent transition-colors duration-300" />
                        </div>
                        <div class="p-8">
                            <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-primary-blue transition-colors">
                                {service.title}
                            </h3>
                            <p class="text-slate-600 leading-relaxed">
                                {service.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
