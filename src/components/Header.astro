---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
---

<header
    class="fixed w-full top-0 z-50 bg-white/90 backdrop-blur-md shadow-sm transition-all duration-300"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center">
                <a href="#" aria-label="Home">
                    <Image
                        src={logoImage}
                        alt="Baristo Solutions Logo"
                        class="h-12 w-auto object-contain"
                    />
                </a>
            </div>

            <!-- Desktop Navigation -->
            <nav class="hidden md:flex space-x-8 items-center">
                <a
                    href="#services"
                    class="text-slate-600 hover:text-primary-blue font-medium transition-colors"
                    >Services</a
                >
                <a
                    href="#about"
                    class="text-slate-600 hover:text-primary-blue font-medium transition-colors"
                    >About</a
                >
                <a
                    href="#knowledge"
                    class="text-slate-600 hover:text-primary-blue font-medium transition-colors"
                    >LSC Info</a
                >
                <a
                    href="#contact"
                    class="px-5 py-2.5 rounded-full bg-scientific-green text-white font-semibold hover:bg-green-700 transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
                >
                    Contact
                </a>
            </nav>

            <!-- Mobile Menu Button (Placeholder for future interactivity if needed, currently jump links work) -->
            <div class="md:hidden flex items-center">
                <a href="#contact" class="p-2 text-scientific-green font-bold">
                    Contact
                </a>
            </div>
        </div>
    </div>
</header>
